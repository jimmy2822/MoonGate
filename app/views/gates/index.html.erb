<div class="hot-tags col-lg-8 container-fluid">
    <ul>熱門標籤：
    <% @tags.each do |tag|%>
        <li style= "display:inline; ">
            <%= link_to tag, search_tag_gates_path(search_word: tag.to_s), class:"btn-tag" %>
        </li>
    <% end %>
    </ul>
</div>

<div class="col-lg-12"><h4><%= flash[:notice]%></h4></div>

<div class="container-fluid col-lg-12 col-xs-12">
    <% @gates.each do |gate| %>
    <div class="col-lg-4 col-xs-12 gate-box container">
        <div class="gate-box-header">
            <div class="col-lg-2 col-xs-2 gate-box-icon">
                <%= show_gate_icon(gate) %>
            </div>
            <div class="col-lg-10 col-xs-10 gate-box-name">
                <%= link_to gate.name, gate_path(gate[:id]) %>
            </div>
        </div>

        <div class="gate-box-body">
            <div class="col-lg-12 col-xs-12 gate-tool-top">
                <%= link_to content_tag(:i,"  加入伺服器",class: "fa fa-moon-o").html_safe, gate[:server], target: "_blank", class:"btn-tag " %>
            </div>
            
            <div class="col-lg-12 col-xs-12 gate-intro"><%= gate.intro %></div>
        </div>

        <div class="gate-box-tool">
            <span class="gate-tag col-lg-10"><i class="glyphicon glyphicon-tags">：</i><% search_tag_button(gate.tag_list[0..2]) %></span>
            <span class="gate-like"><%= like_gate_button(gate) %></span>
        </div>
    </div>
    <% end %>
</div>