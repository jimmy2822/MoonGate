<%= form_for(gate) do |f| %>
    <%= f.label :name, "名稱" %>
    <%= f.text_field :name %><br>

    <%= f.label :icon, "圖示" %>
    <%= f.text_field :icon %><br>

    <%= f.label :tag, "標籤" %>
    <%= f.text_field :tag %><br>

    <%= f.label :intro, "簡介" %>
    <%= f.text_area :intro %><br>

    <%= f.label :intro_detail, "詳細資訊" %>
    <%= f.text_area :intro_detail %><br>

    <%= f.label :is_public, "是否公開" %>
    <%= f.check_box :is_public %><br>

    <%= f.submit %>
<% end %>