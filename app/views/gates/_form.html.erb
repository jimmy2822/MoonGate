<%= simple_form_for(gate) do |f| %>
  <%= f.input :name,label: "名稱",hint:"限制 30 字以內", maxlegth:30, error: "請檢查名稱是否輸入正確" %>
  <%= f.input :icon,label: "圖示", folder: "MoonGate/pictures", hint:"限制檔案大小為 1 MB 內,檔案類型為 JPG、JPEG、PNG" %>
  <%= f.input :server,label: "伺服器 ID", hint:"請於 Discord 伺服器設定＞小工具＞啟用伺服器小工具和選擇即時邀請頻道，並將伺服器 ID 填入", error: "請檢伺服器 ID 是否正確" %>
  <%= f.input :tag_list,label: "標籤", input_html: {value: gate.tag_list.to_s}, hint:"每個標籤請用逗號','隔開，例如：絕地求生,英雄連盟,鬥陣特攻" %> 
  <%= f.input :intro,label: "簡介",hint:"將於月門列表中顯示簡介,限制 150 字以內",:input_html =>{rows:5}, maxlegth:150 %>
  <%= f.input :intro_detail,label: "詳細資訊" ,hint: "顯示於月門檢視頁面",:input_html =>{rows:15} %>
  <%= f.input :is_public,label: "是否公開?",hint: "  勾選後將於月門列表顯示" %>
  <%= f.submit '確認送出' , class:"btn btn-primary" %>
<% end %> 


